<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_setting"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_index"
            layout="@layout/layout_index_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_index"
            android:layout_marginTop="@dimen/setting_index_margin_top"
            android:background="@drawable/bg_setting_rectangle"
            android:paddingTop="40dp">

            <include
                android:id="@+id/layout_more"
                layout="@layout/layout_setting_item"
                android:visibility="visible" />

        </RelativeLayout>


    </RelativeLayout>
</layout>