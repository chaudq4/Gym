<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailText">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSettingText">
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="RaisedButtonGreen" parent="Theme.AppCompat.Light"></style>

    <style name="InputTextInformation">
        <item name="android:textSize">@dimen/addinfor_edittext_size</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="Account_Text_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Account_EditText_Content">
        <item name="android:textColor">@color/account_content_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">13dp</item>
    </style>

</resources>